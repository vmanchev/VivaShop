{% extends "VivaShopBundle:Layouts:admin.main.twig" %}

{% block title %} | Delete an item{% endblock %}

{% block content %}
<h3>Are you sure you want to delete this item?</h3>
<h3>{{ item.title }}</h3>
<p>{{ item.description }}</p>

<form method="post" action="{{ path('viva_shop_catalog_delete', {'id': item.id}) }}">
    <button type="submit" name="deleteaction" value="1" class="btn btn-small btn-danger">Yes</button>
    <button type="submit" name="deleteaction" value="0" class="btn btn-small btn-success">No</button>
</form>


{% endblock %}
